{
  "name": "dredd-transactions",
  "version": "0.0.0-semantically-released",
  "description": "Compiles HTTP Transactions (Request-Response pairs) from an API description document",
  "main": "lib/index.js",
  "engines": {
    "node": ">= 6"
  },
  "scripts": {
    "postshrinkwrap": "node ./scripts/postshrinkwrap.js",
    "clean": "rimraf ./coverage",
    "lint": "bash ./scripts/commitlint.sh && eslint --ignore-path .gitignore .",
    "test": "npm run clean && mocha ./test",
    "test:coverage": "npm run clean && istanbul cover ./node_modules/.bin/_mocha -- ./test",
    "ci:install": "bash scripts/npm-install-ci.sh",
    "ci:test": "npm run lint && npm run test:coverage",
    "ci:coverage": "bash scripts/coveralls.sh",
    "ci:release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/apiaryio/dredd-transactions"
  },
  "files": [
    "lib",
    "npm-shrinkwrap.json",
    "README.md"
  ],
  "dependencies": {
    "fury": "3.0.0-beta.7",
    "fury-adapter-apib-parser": "0.11.0",
    "fury-adapter-swagger": "0.22.4",
    "uri-template": "1.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "7.2.1",
    "@commitlint/config-conventional": "7.1.2",
    "@commitlint/travis-cli": "7.2.1",
    "chai": "4.1.2",
    "chai-json-schema": "1.3.0",
    "coveralls": "3.0.2",
    "eslint": "4.4.1",
    "eslint-config-airbnb": "15.1.0",
    "eslint-plugin-import": "2.7.0",
    "istanbul": "0.4.5",
    "mocha": "5.2.0",
    "mocha-lcov-reporter": "1.3.0",
    "proxyquire": "2.0.0",
    "rimraf": "2.6.3",
    "semantic-release": "15.12.4",
    "sinon": "5.0.7",
    "swagger-zoo": "2.20.0"
  },
  "keywords": [
    "api",
    "test",
    "testing",
    "documenation",
    "integration",
    "acceptance"
  ],
  "author": "Apiary Czech Republic, s.r.o. <support@apiary.io>",
  "license": "MIT"
}
