{
  "name": "dredd",
  "version": "0.4.8",
  "description": "API Blueprint testing tool",
  "main": "lib/dredd.js",
  "bin": {
    "dredd": "bin/dredd"
  },
  "scripts": {
    "cleanup": "rimraf lib",
    "compile": "coffee --bare --compile --output lib src",

    "lint": "coffeelint src",

    "mocha":  "mocha --reporter spec --require coffee-script/register --compilers coffee:coffee-script/register --timeout 60000 --recursive './test/**/*-test.coffee'",
    "bdd": "mocha --watch --reporter spec --require coffee-script/register --compilers coffee:coffee-script/register --timeout 60000 --recursive './test/**/*-test.coffee'",

    "pretest": "npm run lint",
    "test": "npm run compile && npm run mocha 2>&1",

    "prepublish": "npm run cleanup && npm run compile",

    "cov": "npm run cov:prepare && npm run cov:base && npm run cov:clean",
    "html-cov": "npm run cov:prepare && npm run cov:html && npm run cov:clean",
    "coveralls": "npm run cov:prepare && npm run cov:coveralls && npm run cov:clean",

    "cov:clean": "rimraf src-cov",
    "cov:coverage": "coffeecoverage --exclude node_modules,.git,test --path relative src src-cov 1>&2",
    "cov:prepare": "npm run cov:clean && npm run cov:coverage && npm run cov:copies",

    "cov:copies": "npm run cov:copy-package-json && npm run cov:copy-test",
    "cov:copy-package-json": "ncp package.json src-cov/package.json",
    "cov:copy-test": "ncp test src-cov/test",

    "cov:test": "mocha -R spec --timeout 60000 --require coffee-script/register --compilers coffee:coffee-script/register --recursive './src-cov/test/**/*-test.coffee'",
    "cov:html": "mocha -R html-cov --timeout 60000 --require coffee-script/register --compilers coffee:coffee-script/register --recursive './src-cov/test/**/*-test.coffee' > cov.html",
    "cov:coveralls": "mocha -R mocha-lcov-reporter --timeout 60000 --require coffee-script/register --compilers coffee:coffee-script/register --recursive './src-cov/test/**/*-test.coffee' | ./node_modules/coveralls/bin/coveralls.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/apiaryio/dredd"
  },
  "dependencies": {
    "advisable": "~0.2.0",
    "async": "~0.9.0",
    "chai": "^2.1.0",
    "clone": "^1.0.0",
    "coffee-script": "^1.9.1",
    "file": "~0.2.2",
    "gavel": "~0.4.1",
    "glob": "^5.0.3",
    "html": "~0.0.7",
    "htmlencode": "~0.0.4",
    "markdown-it": "^4.0.1",
    "node-uuid": "~1.4.2",
    "optimist": "~0.6.1",
    "protagonist": "~0.17.2",
    "proxyquire": "^1.3.1",
    "request": "^2.53.0",
    "setimmediate": "^1.0.2",
    "uri-template": "~1.0.0",
    "winston": "^0.9.0"
  },
  "devDependencies": {
    "body-parser": "^1.12.1",
    "codo": "2.0.9",
    "coffee-coverage": "~0.4.5",
    "coffee-errors": "~0.8.6",
    "coffeelint": "^1.9.2",
    "coveralls": "~2.11.2",
    "ncp": "^2.0.0",
    "express": "^4.12.2",
    "jscoverage": "~0.5.9",
    "mocha": "^2.1.0",
    "mocha-lcov-reporter": "0.0.2",
    "nock": "^0.59.1",
    "rimraf": "",
    "sinon": "^1.14.0"
  },
  "keywords": [
    "api",
    "test",
    "testing",
    "documenation",
    "integration",
    "acceptance"
  ],
  "author": "Adam Kliment <adam@apiary.io>",
  "contributors": [
    {
      "name": "Evan Cordell",
      "email": "cordell.evan@gmail.com"
    }
  ],
  "license": "MIT"
}
