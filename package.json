{
  "name": "dredd-transactions",
  "version": "0.0.0-semantically-released",
  "description": "Compiles HTTP Transactions (Request-Response pairs) from API description document",
  "main": "dist/index.js",
  "engines": {
    "node": ">= 4"
  },
  "scripts": {
    "build": "babel src --out-dir ./dist/src",
    "clean": "rimraf dist",
    "copy:test": "node scripts/copy.js",
    "coveralls": "scripts/coveralls.sh",
    "lint": "scripts/commitlint.sh && eslint src",
    "prepublish": "npm run build",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "test": "npm run clean && npm run copy:test && npm run build && mocha \"./dist/test/**/*-test.coffee\" --opts \"./mocha.opts\"",
    "test:coverage": "scripts/coverage.sh"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/apiaryio/dredd-transactions"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "4.0.0"
          }
        }
      ]
    ]
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "clone": "^2.1.1",
    "fury": "3.0.0-beta.4",
    "fury-adapter-apib-parser": "0.9.0",
    "fury-adapter-swagger": "0.15.0",
    "uri-template": "^1.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^4.2.1",
    "@commitlint/config-angular": "^4.2.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "chai": "^4.1.0",
    "chai-json-schema": "^1.3.0",
    "coffee-coverage": "^2.0.1",
    "coffee-script": "^1.12.6",
    "coffeelint": "^1.15.7",
    "coveralls": "^2.13.1",
    "cpy": "^6.0.0",
    "drafter": "^1.0.0",
    "eslint": "^4.4.1",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.7.0",
    "istanbul": "^0.4.5",
    "mocha": "^4.0.1",
    "mocha-lcov-reporter": "^1.3.0",
    "proxyquire": "^1.8.0",
    "rimraf": "^2.6.2",
    "semantic-release": "^8.2.0",
    "sinon": "^4.0.1",
    "swagger-zoo": "^2.5.2"
  },
  "keywords": [
    "api",
    "test",
    "testing",
    "documenation",
    "integration",
    "acceptance"
  ],
  "author": "Apiary Czech Republic, s.r.o. <support@apiary.io>",
  "license": "MIT"
}
